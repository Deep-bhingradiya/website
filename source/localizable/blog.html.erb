                      <a class="close-button button is-round br-small-margin toggle-expand" href="#" data-animation-target-id="<%= animation_target_id %>" data-toggle-target-id="<%= toggle_target_id %>"><%= t(:closeButton) %></a>
                    </div>
                    <div class="author-container">
                      <a href="team.html">
                        <p class="no-margin">
                          <%= f["authorName"] %>
                          <br>
                          <%= f["authorRole"] %>
                        </p>
                      </a>
                      <div class="author-image">
                        <img src="<%= f["imgPath"] %>" height="65" width="65" alt=""/>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <% end %>
          </div>
    </div>
  </section>
</main>
<%= partial "partials/footer" %>
